{% extends "common.geo.jinja2" %}
{# parameter definitions section for body-centered geometry #}

{# Required input variables:
    mcar = characteristic length for mesh refinement
    Lx = unit cell x-length
    Ly = unit cell y-length
    R = pore radius
    H = bulk distance above and below pore included in model
    tm = pore length
  No optional input variables.
  Use trim_blocks=True.
  #}

{% block paramdefs %}
//Mesh density control
mcarh={{ mscale }}*{{ mcarh }};
mcarl={{ mscale }}*{{ mcarl }};

//Geometric inputs
Lx={{ Lx }};
Ly={{ Ly }};
R={{ R }};
H={{ H }};
tm={{ tm }};

//Point ordinates
X1=0;
X2=R;
X3=Lx;
Y1=0;
Y2=R;
Y3=Ly;
Z1=0;
Z2=H;
Z3=H+tm;
Z4=2*H+tm;
Z5=H+tm/2;

//Parametric locations output
Printf("# Parametric locations output") > paramlocsfile;
Printf("X1: %f", X1) >> paramlocsfile;
Printf("X2: %f", X2) >> paramlocsfile;
Printf("X3: %f", X3) >> paramlocsfile;
Printf("Y1: %f", Y1) >> paramlocsfile;
Printf("Y2: %f", Y2) >> paramlocsfile;
Printf("Y3: %f", Y3) >> paramlocsfile;
Printf("Z1: %f", Z1) >> paramlocsfile;
Printf("Z2: %f", Z2) >> paramlocsfile;
Printf("Z3: %f", Z3) >> paramlocsfile;
Printf("Z4: %f", Z4) >> paramlocsfile;
Printf("Z5: %f", Z5) >> paramlocsfile;
{% endblock %}