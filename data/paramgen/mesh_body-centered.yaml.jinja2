%YAML 1.2
#Parameter input file
#Each document is a separate case run
#Blank (bare) documents are skipped

#Mesh definition
#Each document defines an instance of buildgeom.MeshParameters
{% for fields in allfields %}
---
meshname: {{ '%s_mesh_%03d'|format(fields.hrhash, fields.counter) }}
lattice: body-cen2
mscale: 1.0
mcarh: 1.0
mcarl: 5.0
Lx: {{ fields.Lx }}
Ly: {{ fields.Ly }}
R: {{ fields.R }}
H: {{ fields.H }}
tm: {{ fields.tm }}
{% endfor %}
